{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableDependencyDashboard"],
  "flux": {
    "fileMatch": [
      "^.+\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "^.+\\.ya?ml$"
    ]
  },
  "dockerfile": {
    "fileMatch": [
      "(^|/)*Dockerfile$",
      "(^|/)*Dockerfile\\..+$",
      "(^|/)*\\.json$",
      "(^|/)*\\.ya?ml$",
      "(^|/)*\\.cs$"
    ]
  },
  "github-actions": {
    "enabled": false
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  }
}
